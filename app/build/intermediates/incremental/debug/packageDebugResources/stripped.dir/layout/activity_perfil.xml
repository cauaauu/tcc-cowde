<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#06002E"
    tools:context=".Perfil">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btMapa"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgTopoo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/imgCirculo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/topo" />

                <ImageView
                    android:id="@+id/imgCirculo"
                    android:layout_width="500px"
                    android:layout_height="500px"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgTopoo2"
                    app:srcCompat="@drawable/circulo" />

                <ImageView
                    android:id="@+id/imgPerfil"
                    android:layout_width="500px"
                    android:layout_height="500px"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgTopoo2"
                    app:srcCompat="@drawable/pintin" />

                <TextView
                    android:id="@+id/txtOla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="2dp"
                    android:fontFamily="@font/press_start_2p"
                    android:text="@string/txt4"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toStartOf="@+id/txtNomeUsuario"
                    app:layout_constraintTop_toBottomOf="@+id/imgCirculo" />

                <TextView
                    android:id="@+id/txtNomeUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="144dp"
                    android:fontFamily="@font/press_start_2p"
                    android:text="laranchinha123"
                    android:textColor="#FF148A"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgPerfil" />

                <TextView
                    android:id="@+id/txtNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/press_start_2p"
                    android:text="laranchinha"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtNomeUsuario" />

                <ImageView
                    android:id="@+id/imgRetV"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtNome"
                    app:srcCompat="@drawable/retverde" />

                <TextView
                    android:id="@+id/txtPg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="114dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="109dp"
                    android:fontFamily="@font/press_start_2p"
                    android:text="@string/txt9"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/imgRetV"
                    app:layout_constraintHorizontal_bias="0.475"
                    app:layout_constraintStart_toStartOf="@+id/imgRetV"
                    app:layout_constraintTop_toTopOf="@+id/imgRetV" />

                <TextView
                    android:id="@+id/txtGeral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/press_start_2p"
                    android:text="@string/txt10"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtPg" />

                <TextView
                    android:id="@+id/txtProgresso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/press_start_2p"
                    android:text="33%"
                    android:textColor="#FFDD17"
                    android:textSize="60sp"
                    app:layout_constraintBottom_toBottomOf="@+id/imgRetV"
                    app:layout_constraintEnd_toEndOf="@+id/imgRetV"
                    app:layout_constraintStart_toStartOf="@+id/imgRetV"
                    app:layout_constraintTop_toBottomOf="@+id/txtGeral" />

                <ImageView
                    android:id="@+id/imgRetR"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="24dp"
                    android:backgroundTint="#FF148A"
                    app:layout_constraintBottom_toTopOf="@+id/buttonAtualizar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgRetV"
                    app:srcCompat="@drawable/retrosa" />

                <TextView
                    android:id="@+id/txtMod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/press_start_2p"
                    android:text="@string/txt11"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/imgRetR"
                    app:layout_constraintStart_toStartOf="@+id/imgRetR"
                    app:layout_constraintTop_toTopOf="@+id/imgRetR" />

                <TextView
                    android:id="@+id/txtCon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/press_start_2p"
                    android:text="@string/txt12"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/imgRetR"
                    app:layout_constraintTop_toBottomOf="@+id/txtMod" />

                <TextView
                    android:id="@+id/txtProgresso2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="156dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/press_start_2p"
                    android:text="1"
                    android:textColor="#FFDD17"
                    android:textSize="70sp"
                    app:layout_constraintStart_toStartOf="@+id/imgRetR"
                    app:layout_constraintTop_toBottomOf="@+id/txtCon" />

                <Button
                    android:id="@+id/buttonAtualizar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="64dp"
                    android:backgroundTint="#FF148A"
                    android:text="@string/txt8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/buttonMapa"
                    android:layout_width="141dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="120dp"
                    android:backgroundTint="#FF148A"
                    android:text="@string/txt13"
                    app:layout_constraintEnd_toStartOf="@+id/buttonNotificacao"
                    app:layout_constraintHorizontal_bias="0.29"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/buttonAtualizar"
                    tools:text="@string/txt13" />

                <Button
                    android:id="@+id/buttonNotificacao"
                    android:layout_width="141dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="36dp"
                    android:backgroundTint="#FF148A"
                    android:text="@string/txt14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/buttonAtualizar"
                    tools:text="@string/txt14" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>